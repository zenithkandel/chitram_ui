    <!-- Main Content -->
    <main>
        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-container">
                <div class="hero-content">
                    <div class="hero-icon">
                        <i class="fas fa-paint-brush"></i>
                    </div>
                    <h1 class="hero-title">
                        Join Our <span class="gradient-text">Artist Community</span>
                    </h1>
                    <p class="hero-description">
                        Showcase your artistic talent and connect with art enthusiasts worldwide. 
                        Join Chitram's growing community of passionate artists.
                    </p>
                </div>
            </div>
        </section>

        <!-- Application Content -->
        <section class="application-section">
            <div class="application-container">
                <!-- Info Cards -->
                <div class="info-cards">
                    <div class="info-card">
                        <div class="card-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3>Join 500+ Artists</h3>
                        <p>Be part of our thriving artist community and showcase your work to thousands of art lovers.</p>
                    </div>
                    <div class="info-card">
                        <div class="card-icon">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <h3>Earn from Your Art</h3>
                        <p>Turn your passion into profit. Sell your artwork and earn competitive commissions.</p>
                    </div>
                    <div class="info-card">
                        <div class="card-icon">
                            <i class="fas fa-globe"></i>
                        </div>
                        <h3>Global Reach</h3>
                        <p>Reach art enthusiasts worldwide through our platform and grow your artistic presence.</p>
                    </div>
                </div>

                <!-- Application Form -->
                <div class="form-container">
                    <div class="form-header">
                        <h2>Artist Application Form</h2>
                        <p>Fill out the form below to apply as an artist on our platform</p>
                    </div>

                    <form id="applicationForm" class="application-form" enctype="multipart/form-data">
                        <!-- Personal Information Section -->
                        <div class="form-section">
                            <div class="section-header">
                                <div class="section-icon">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="section-title">
                                    <h3>Personal Information</h3>
                                    <p>Tell us about yourself</p>
                                </div>
                            </div>
                            
                            <div class="form-grid">
                                <div class="form-group">
                                    <label for="full_name">Full Name *</label>
                                    <input type="text" id="full_name" name="full_name" required>
                                    <i class="fas fa-user form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="age">Age *</label>
                                    <input type="number" id="age" name="age" min="16" max="100" required>
                                    <i class="fas fa-calendar form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="email">Email Address *</label>
                                    <input type="email" id="email" name="email" required>
                                    <i class="fas fa-envelope form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="phone">Phone Number</label>
                                    <input type="tel" id="phone" name="phone">
                                    <i class="fas fa-phone form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="city">City *</label>
                                    <input type="text" id="city" name="city" required>
                                    <i class="fas fa-map-marker-alt form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="district">District *</label>
                                    <input type="text" id="district" name="district" required>
                                    <i class="fas fa-map form-icon"></i>
                                </div>
                            </div>
                        </div>

                        <!-- Educational & Artistic Background Section -->
                        <div class="form-section">
                            <div class="section-header">
                                <div class="section-icon">
                                    <i class="fas fa-graduation-cap"></i>
                                </div>
                                <div class="section-title">
                                    <h3>Educational & Artistic Background</h3>
                                    <p>Share your artistic journey</p>
                                </div>
                            </div>
                            
                            <div class="form-grid">
                                <div class="form-group">
                                    <label for="started_art_at">Started Art At</label>
                                    <input type="text" id="started_art_at" name="started_art_at" placeholder="e.g., Age 10, 2018">
                                    <i class="fas fa-clock form-icon"></i>
                                </div>
                                <div class="form-group">
                                    <label for="school_college">School/College</label>
                                    <input type="text" id="school_college" name="school_college">
                                    <i class="fas fa-school form-icon"></i>
                                </div>
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="socials">Social Media Links</label>
                                <textarea id="socials" name="socials" rows="3" placeholder='{"facebook": "your-facebook-link", "instagram": "your-instagram-link", "twitter": "your-twitter-link"}'></textarea>
                                <i class="fas fa-share-alt form-icon"></i>
                                <small class="form-help">
                                    <i class="fas fa-info-circle"></i>
                                    Enter social media links in JSON format (optional)
                                </small>
                            </div>
                        </div>

                        <!-- Profile & Bio Section -->
                        <div class="form-section">
                            <div class="section-header">
                                <div class="section-icon">
                                    <i class="fas fa-id-card"></i>
                                </div>
                                <div class="section-title">
                                    <h3>Profile & Bio</h3>
                                    <p>Tell your story</p>
                                </div>
                            </div>
                            
                            <div class="form-group file-upload-group">
                                <label for="profile_picture">Profile Picture</label>
                                <div class="file-upload-area" onclick="document.getElementById('profile_picture').click()">
                                    <input type="file" id="profile_picture" name="profile_picture" accept="image/*" onchange="previewImage(this)" hidden>
                                    <div id="imagePreview" class="image-preview">
                                        <div class="upload-placeholder">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                            <p>Click to upload profile picture</p>
                                            <small>Supported formats: JPG, PNG, GIF (Max 5MB)</small>
                                        </div>
                                        <img id="previewImage" class="preview-img hidden">
                                        <div class="image-overlay hidden">
                                            <button type="button" class="change-image-btn" onclick="document.getElementById('profile_picture').click()">
                                                <i class="fas fa-edit"></i>
                                                Change Image
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="bio">Bio</label>
                                <textarea id="bio" name="bio" rows="4" placeholder="Tell us about yourself and your artistic journey. What inspires you? What makes your art unique?"></textarea>
                                <i class="fas fa-pen form-icon"></i>
                            </div>
                            
                            <div class="form-group full-width">
                                <label for="message">Message to Admin</label>
                                <textarea id="message" name="message" rows="4" placeholder="Any additional message or information you'd like to share with our team..."></textarea>
                                <i class="fas fa-comment form-icon"></i>
                            </div>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="form-submit">
                            <button type="submit" class="submit-btn" id="submitBtn">
                                <div class="btn-content" id="btnContent">
                                    <i class="fas fa-paper-plane"></i>
                                    <span id="submitText">Submit Application</span>
                                </div>
                                <div class="btn-loading hidden" id="btnLoading">
                                    <div class="loading-spinner"></div>
                                    <span>Submitting...</span>
                                </div>
                            </button>
                            <p class="submit-note">
                                <i class="fas fa-info-circle"></i>
                                We'll review your application within 3-5 business days
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- Success Modal -->
        <div id="successModal" class="modal hidden">
            <div class="modal-overlay"></div>
            <div class="modal-content">
                <div class="modal-header">
                    <div class="success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>Application Submitted Successfully!</h3>
                    <button class="modal-close" onclick="closeSuccessModal()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Thank you for your application! We have received your artist application and will review it carefully.</p>
                    <p>You will be notified via email about the status of your application within 3-5 business days.</p>
                    <p class="welcome-message">Welcome to the <strong>Chitram</strong> community!</p>
                </div>
                <div class="modal-footer">
                    <button class="modal-btn primary" onclick="closeSuccessModal()">
                        <i class="fas fa-check"></i>
                        Got it!
                    </button>
                </div>
            </div>
        </div>
        
    </main>

